{% extends 'property.view.base.html.twig' %}

{% block title %}News index (property view){% endblock %}

{% block body %}
    <h1>My news</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Name</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for news in news %}
            <tr>
                {# <td>{{ news.id }}</td> #}
                <td>{{ news.date ? news.date|date('d-m-Y') : '' }}</td>
                <td>{{ news.title}}</td>
                <td>
                    <a href="{{ path('property_view_news_show', {'id': news.id}) }}">show</a>
                    <a href="{{ path('news_edit', {'id': news.id}) }}">edit</a>
                    <a href="{{ path('agency_view_news_show', {'id': news.id}) }}">user view</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('news_create') }}">Create new</a>
{% endblock %}
